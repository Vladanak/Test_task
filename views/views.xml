<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
     <record id="brand_config_action" model="ir.actions.act_window">
         <field name="name">sales.brand.action</field>
         <field name="res_model">sales.brand</field>
         <field name="view_mode">tree,form</field>
         <field name="help" type="html">
             <p class="oe_view_nocontent_create">Firs</p>
         </field>
    </record>


    <record id="module_config_action" model="ir.actions.act_window">
        <field name="name">Module</field>
        <field name="res_model">sales.model</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
             <p class="oe_view_nocontent_create">Sec</p>
         </field>
    </record>


     <record model="ir.ui.view" id="brand_view_tree">
         <field name="name">sales_brand_tree</field>
         <field name="model">sales.brand</field>
         <field name="arch" type="xml">
             <tree>
                <field name="name"> </field>
             </tree>
         </field>
    </record>

    <record model="ir.ui.view" id="brand_view_form">
        <field name="name">sales_brand_form</field>
        <field name="model">sales.brand</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"> </field>
            </form>
        </field>
    </record>

    <menuitem id="menu_sales_brand_config"
            name="Brand"
            parent="sale.menu_sale_config"
            action="brand_config_action"
            sequence="8"/>


    <menuitem id="menu_sales_module_config"
            name="Module"
            parent="sale.menu_sale_config"
            action="module_config_action"
            sequence="9"/>
    </data>
</odoo>